<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_item_ref"
            android:layout_width="200dp"
            android:padding="40dp"
            android:layout_height="wrap_content"
            android:background="@color/clr1"/>

        <TextView
            android:id="@+id/txt_item_des"
            android:layout_toRightOf="@+id/txt_item_ref"
            android:layout_width="200dp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:background="@color/clr2"/>

        <TextView
            android:id="@+id/txt_item_prix"
            android:background="@color/clr3"
            android:padding="15dp"
            android:layout_below="@+id/txt_item_des"
            android:layout_toRightOf="@id/txt_item_ref"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>